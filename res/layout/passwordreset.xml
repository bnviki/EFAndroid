<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            	 android:layout_width="match_parent"
             	 android:layout_height="match_parent"
             	 android:background="@drawable/android">

    <TextView
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
          
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/alert"
            android:textColor="#000000"
            android:layout_below="@+id/respass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

    <EditText
        android:id="@+id/forpas"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000000" >

        <requestFocus />
    </EditText>

    

    

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/forpas"
        android:layout_alignParentLeft="true"
        android:text="		   		 Enter your Email Id"
        android:textColor="#5D8AA8"
        android:textSize="20dp" />

    <Button
        android:id="@+id/bktolog"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/alert"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button"
        android:text="Login"
        android:textSize="13dp" />

    <Button
        android:id="@+id/respass"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_below="@+id/forpas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:background="@drawable/button"
        android:text="Reset password"
        android:textColor="#ffffff"
        android:textSize="13dp" />

</RelativeLayout>